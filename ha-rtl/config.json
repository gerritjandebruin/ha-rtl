{
  "name": "ha-rtl",
  "version": "2.0.1dev9",
  "slug": "ha-rtl",
  "description": "Use a RTL-SDR device to capture any RF signal and send it to Home Assistant. Before starting, complete configuration. After starting, a device_trigger is created which will update when the right RF pulse is received.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "url": "http://github.com/gerritjandebruin/home-assistant-rtl-sdr",
  "usb": true,
  "startup": "application",
  "stage": "stable",
  "boot": "auto",
  "image": "gerritjandebruin/ha-rtl-{arch}",
  "services": ["mqtt:need"],
  "options": {
    "frequencies": [433920000],
    "hop_interval": 10,
    "devices": [
      {
        "protocol": 51, 
        "automation_type": "device_automation", 
        "trigger_type": "action", 
        "trigger_subtype": "button_1", 
        "manufacturer": "", 
        "name": "device1", 
        "id": "device1", 
        "model": "model1"
      }
    ],
    "discovery_prefix_mqtt": "homeassistant"
  },
  "schema": {
    "frequencies": ["int(1,)"],
    "hop_interval": "int(1,)",
    "devices": [
      {
        "protocol": "int(1,191)", 
        "automation_type": "list(device_automation|binary_sensor|sensor)", 
        "trigger_type": "str?", 
        "trigger_subtype": "str?", 
        "manufacturer": "str?", 
        "name": "str", 
        "id": "str",
        "model": "str?",
        "house_code": "int?"
      }
    ],
    "discovery_prefix_mqtt": "str"
  },
  "panel_icon": "mdi:radio-tower"
}
